<Window x:Class="TP.ConcurrentProgramming.PresentationView.BillChooserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wybierz liczbę bil" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Margin="0,0,0,10"><Run Text="Podaj liczbę bil(1-15)"/><Run Language="pl-pl" /><Run Text=":"/></TextBlock>
        <TextBox x:Name="InputBox" Width="100" KeyDown="InputBox_Enter"/>
        <Button Content="Start" Margin="0,10,0,0" Click="StartButton_Click"/>
    </StackPanel>
</Window>
